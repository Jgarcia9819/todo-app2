{
  "version": 1,
  "include": ["/*"],
  "exclude": ["/assets/*"],
  "routes": [
    {
      "src": "^/assets/.*",
      "headers": {
        "cache-control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "^/.*\\.js$",
      "headers": {
        "Content-Type": "application/javascript"
      }
    },
    {
      "src": "^/.*\\.css$",
      "headers": {
        "Content-Type": "text/css"
      }
    },
    {
      "src": "^/((?!assets/).)*$",
      "dest": "/index.html"
    }
  ]
}